&GLOBAL
  PROJECT cage 
  RUN_TYPE GEO_OPT
  PRINT_LEVEL LOW
  WALLTIME 86300
&END GLOBAL

!&EXT_RESTART
!  RESTART_FILE_NAME ./amides-1.restart
!  RESTART_POS
!  RESTART_VEL
!  RESTART_AVERAGES
!  RESTART_CELL
!  RESTART_THERMOSTAT
!  RESTART_COUNTERS
!&END

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ./BASIS_MOLOPT
    POTENTIAL_FILE_NAME ./GTH_POTENTIALS
    CHARGE 12 
    &MGRID 
      CUTOFF 400
      REL_CUTOFF 40
      NGRIDS 5
    &END 
    &QS
      EPS_DEFAULT 1.0E-12
      METHOD GPW
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 3
    &END QS
    &SCF
      MAX_SCF 50
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      &OT 
        MINIMIZER DIIS
        N_DIIS 7
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL
         &PAIR_POTENTIAL
            SCALING 0.75
            TYPE DFTD2
            R_CUTOFF [angstrom] 20
         &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
    &POISSON
       PERIODIC NONE
       PSOLVER MT
    &END
  &END DFT
 &SUBSYS
    &CELL
      ABC [angstrom] 50.0 50.0 50.0
      ALPHA_BETA_GAMMA 90.000000 90.000000 90.000000
    &END CELL
    &TOPOLOGY
      COORDINATE XYZ
      COORD_FILE_NAME ./2b.xyz
    &END TOPOLOGY
    &KIND N
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-BLYP-q5
    &END KIND
    &KIND O
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &KIND S
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &KIND H
     BASIS_SET TZVP-MOLOPT-GTH
     POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND C
     BASIS_SET TZVP-MOLOPT-GTH 
     POTENTIAL GTH-BLYP-q4
    &END KIND
 &END SUBSYS
&END FORCE_EVAL

&MOTION
  &GEO_OPT
    TYPE MINIMIZATION
    MAX_DR    3.00000000E-003
    MAX_FORCE 4.50000000E-004
    RMS_DR    1.50000000E-003
    RMS_FORCE 3.00000000E-004
    MAX_ITER 500
    OPTIMIZER CG
    &CG
      MAX_STEEP_STEPS  0
      RESTART_LIMIT 9.0E-01
    &END CG
  &END GEO_OPT
  &PRINT
   &TRAJECTORY
     &EACH
       GEO_OPT 1
     &END EACH
   &END TRAJECTORY
   &RESTART
      &EACH
       GEO_OPT 1
     &END EACH
   &END RESTART
  &END PRINT
&END MOTION
